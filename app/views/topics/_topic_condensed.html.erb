  <% if can? :read, t -%>
    <article>
    <h1><%= link_to t.title, site_messageboard_topic_path(site, messageboard, t) %></h1>
      <cite class="started_by"><%= link_to t.user_name, site_user_path(site, t.user) %></cite>
      <abbr class="started_at timeago" title="<%= t.created_at.strftime("%Y-%m-%dT%I:%M:%S-0500") %>"><%= t.created_at.strftime("%B %d, %Y") %></abbr>
      <cite class="updated_by"><%= link_to t.last_user.name, site_user_path(site, t.last_user) %></cite> 
      <abbr class="updated_at timeago" title="<%= t.updated_at.strftime("%Y-%m-%dT%I:%M:%S-0500") %>"><%= t.updated_at.strftime("%B %d, %Y") %></abbr>
      <div  class="post_count"><%= t.posts_count %></div>
    </article>
  <% end -%>
