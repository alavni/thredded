<% content_for :page_id do %>topics_posts<% end %>
<% content_for :page_title do %><%= THREDDED[:site_name] %> | <%= topic.title %> | Posts<% end %>

<%= render :partial => "shared/header" %>

<section id="content">
  <header>
    <h1><%= topic.title %></h1> 
    <% if topic.users_to_sentence %>
      <cite><%= topic.users_to_sentence %></cite>
    <% end %>
  </header>

  <% topic.posts.each do |p| %>
    <article>
      <header>
      <cite><%= p.user %></cite>
      <abbr class="timeago" title="<%= p.created_at.strftime("%Y-%m-%dT%I:%M:%SZ") %>"><%= p.created_at.strftime("%B %d, %Y") %></abbr>
      </header>
      <p><%= p.content %></p>
    </article>
  <% end %>

  <%= form_for [messageboard, topic, @post] do |f| %>
    <p>
    <%= f.label :your_content %>:<br/>
      <%= f.text_area :content, :rows => 5 %>
    </p>
    <%= f.submit "Submit" %>
  <% end %>
</section>
