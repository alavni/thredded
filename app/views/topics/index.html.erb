<% content_for :page_id do %>topics_listing<% end %>
<% content_for :page_title do %>
  <%= app_config.title %> | <%= messageboard.title %> | Recent Topics
<% end %>

<header>
  <nav>
    <ul class="breadcrumbs">
      <li><%= link_to 'Forums', root_path %></li>
      <li><span><%= messageboard.title %></span></li>
    </ul>
  </nav>

  <%= render 'shared/currently_online' %>
  <%= render 'shared/topic_nav' %>
</header>

<section class="topics">
  <% if @sticky.first %>
    <div class="stuck">
      <%= render partial: 'topics/topic_condensed', collection: @sticky, as: :t %>
    </div>
  <% end %>

  <% if @topics.first %>
    <div class="currently">
      <%= render partial: 'topics/topic_condensed', collection: @topics, as: :t %>
    </div>
  <% end %>
</section>

<footer>
  <%= paginate @topics %>
  <nav>
    <% if can? :create, Topic.new %>
      <ul class="actions">
        <li><%= link_to 'Create a New Topic', new_messageboard_topic_path(messageboard) %></li>
      </ul>
    <% end %>

    <ul class="breadcrumbs">
      <li><%= link_to 'Forums', root_path %></li>
      <li><span><%= messageboard.title %></span></li>
    </ul>
  </nav>
</footer>
