<% content_for :page_id do %>topics_listing<% end %>
<% content_for :page_title do %><%= THREDDED[:site_name] %> | <%= messageboard.title %> | Recent Topics<% end %>
<% content_for :header_nav do %>
    <nav>
      <ul>
        <li class="new_topic"><%= link_to "Create a New Topic", link_for_new_topic(site, messageboard) %></li>
      </ul>
    </nav>
<% end %>

<header>
  <nav>
    <ul>
      <li><a href="/">Forums</a> &rarr; </li>
    </ul>
  </nav>
  <h1><%= messageboard.title %></h1>
  <h2>Recent Updates</h2>
  <div class="title">Topic Title</div>
  <div class="started">Started</div>
  <div class="updated">Updated</div>
  <div class="posts">Posts</div>
</header>
<% @topics.each do |t| -%>
  <% if can? :read, t -%>
    <article>
      <h1><%= link_to t.title, site_messageboard_topics_path(site, messageboard, t) %></h1>
      <cite class="started_by"><%= link_to t.user_name, link_for_user(site, t.user) %></cite>
      <abbr class="started_at timeago" title="<%= t.created_at.strftime("%Y-%m-%dT%I:%M:%S-0500") %>"><%= t.created_at.strftime("%B %d, %Y") %></abbr>
      <cite class="updated_by"><%= link_to t.last_user.name, link_for_user(site, t.last_user) %></cite> 
      <abbr class="updated_at timeago" title="<%= t.updated_at.strftime("%Y-%m-%dT%I:%M:%S-0500") %>"><%= t.updated_at.strftime("%B %d, %Y") %></abbr>
      <div  class="post_count"><%= t.posts_count %></div>
        </article>
      <% end -%>
    <% end -%>
    <footer>
      <%= link_to "Create a New Topic", link_for_new_topic(site, messageboard) %>
    </footer>
