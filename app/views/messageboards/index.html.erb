<% content_for :page_id do %>messageboard_listing<% end %>
<% content_for :page_title do %><%= site.title %> | Messageboard Listing<% end %>

<header>
  <h1>Messageboards</h1>
  <h2>
    <%= number_to_human(site.messageboards.count).downcase %> messageboards,
    <%= number_to_human(site.topics_count, precision: 4).downcase %> topics,
    and <%= number_to_human(site.posts_count, precision: 5).downcase %> posts</h2>
</header>

<section id="messageboards">
  <header>
    <div class="messageboard">Messageboard Name</div>
    <div class="last_post">Last Post At</div>
  </header>
  <%= render site.messageboards %>
</section>
