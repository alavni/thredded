<!DOCTYPE html>
<html>
<head>
  <title><%= yield :page_title %></title>
  <%= stylesheet_link_tag :all %>
  <link href='http://fonts.googleapis.com/css?family=Yanone+Kaffeesatz:regular,bold&subset=latin' rel='stylesheet' type='text/css' />
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body id="<%= yield :page_id %>">
	<header>
		
		<nav>
			<ul>
			  <%= render 'devise/menu/registration_items' %>
			  <%= render 'devise/menu/login_items' %>
              <% # render 'topics/menu/new_topic' %>
			</ul>
		</nav>

	</header>

	<section id="contentwrap">
		
		<% [:info, :error, :notice, :alert, :warning].each do |key| %>
			<% if flash[key] %>
				<div class="<%= key %>" id="flash">
					<%= flash[key] %>
				</div>
			<% end %>
		<% end %>
		
		<%= yield %>
	</section>

	<footer>
		<p class="copy">&copy; A <a href="http://joeloliveira.com">WeatherField</a> / <a href="http://the47th.com">47th</a> Joint</p>
	</footer>
</body>
</html>
