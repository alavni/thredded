<% content_for :page_id do %>posts_edit<% end %>
<% content_for :page_title do %><%= site.title %> | <%= messageboard.title %> | Edit Post<% end %>

<%= nested_form_for([messageboard, topic, @post], :url => { :action => "update" }, :html => { :method => :put, :class => :topic_form }) do |f| %>

  <%= render :partial => 'form', :locals => { :f => f } %>

  <%= f.submit "Edit Post", { :tabindex => 2 } %>

<% end %>
