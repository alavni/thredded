<%= form_for(@messageboard, validate: true, as: :messageboard,
  url: create_setup_path(step: step || '3'), method: :post) do |f| %>
  <ul>
    <li>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </li>

    <li>
      <%= f.label :name, 'Slug (letters and numbers only - no spaces or special characters)' %>
      <%= f.text_field :name %>
    </li>

    <li>
      <%= f.label :description %>
      <%= f.text_field :description %>
    </li>

    <li>
      <%= f.label :security %>
      <%= f.select :security, [:private, :public, :logged_in] %>
    </li>

    <li>
      <%= f.label :posting_permission %>
      <%= f.select :posting_permission, [:members, :logged_in, :anonymous] %>
    </li>

    <li>
      <%= f.submit 'Continue' %>
    </li>
  </ul>
<% end %>
