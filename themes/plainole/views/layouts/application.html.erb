<!DOCTYPE html>
<html>
  <head>
    <title><%= yield :page_title %></title>
    <%= stylesheet_link_tag("nav_bar") %>
    <%= theme_stylesheet_link_tag 'style' %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>
  <!-- default plainole layout -->
  <body id="<%= yield :page_id %>">

    <header>

      <nav id="site_wide">
        <ul>
          <%= render 'devise/menu/registration_items' %>
          <%= render 'devise/menu/login_items' %>
        </ul>
      </nav>

    </header>

    <section id="contentwrap">
      <%= render :partial => "shared/error_msgs" %>
      <%= yield %>
    </section>

  </body>
</html>
